<Window x:Class="Skatech.Euphoria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skatech.Euphoria"
        xmlns:conv="clr-namespace:Skatech.Components.Presentation.MarkupConverters"
        mc:Ignorable="d"
        Title="Euphoria"
        MinHeight="370" MinWidth="420" KeyDown="OnKeyDownUp" KeyUp="OnKeyDownUp" Background="#FF80888F">

    <Window.DataContext>
        <local:MainWindowController />
    </Window.DataContext>

    <ScrollViewer Focusable="False"
                VerticalScrollBarVisibility="Disabled" >
        <ScrollViewer.Style><Style><Style.Triggers>
            <DataTrigger Binding="{Binding IsControlMode}" Value="True">
                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Visible" />
            </DataTrigger>
        </Style.Triggers></Style></ScrollViewer.Style>

        <local:ImagesItemsControl />

        <ScrollViewer.ContextMenu>
            <ContextMenu>
                <!-- <MenuItem Header="Menu item 1" />
                <MenuItem Header="Menu item 2" />
                <Separator /> -->
                <MenuItem Header="_Show" ItemsSource="{Binding CanShowImageGroups}" Click="OnShowImageMenuItemClick" />
                <MenuItem Header="_Hide All" Click="OnHideAllImagesMenuItemClick" />
            </ContextMenu>
        </ScrollViewer.ContextMenu>

    </ScrollViewer>


</Window>
